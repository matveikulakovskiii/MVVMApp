<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMApp.Views.CalculatorPage">

    <StackLayout Padding="20">
        <Label Text="Your height (cm):" />
        <Entry x:Name="HeightEntry" Placeholder="Enter your height" Keyboard="Numeric" />

        <Label Text="Your weight (kg):" />
        <Entry x:Name="WeightEntry" Placeholder="Enter your weight" Keyboard="Numeric" />

        <Button Text="Calculate BMI" Clicked="OnCalculateClicked" />

        <Label x:Name="ResultLabel" FontSize="20" FontAttributes="Bold"
               VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
