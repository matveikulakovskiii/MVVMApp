<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMApp.Views.LoginPage">
    <StackLayout Padding="30">
        <Label Text="Email" />
        <Entry x:Name="EmailEntry" Placeholder="Enter your Email" />
        <Label Text="Password" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter your Password" IsPassword="True" />
        <Button Text="Sign in" Clicked="OnLoginClicked" />
        <Button Text="Registration" Clicked="OnRegisterClicked" />
    </StackLayout>
</ContentPage>
